---
import BaseLayout from '../layouts/BaseLayout.astro'
import PortableText from '../components/PortableText.astro'
import { sanity, urlFor } from '../lib/sanity'
import { HOME_PAGE_QUERY } from '../lib/sanityQueries'

const home = await sanity.fetch(HOME_PAGE_QUERY)
if (!home) throw new Error('HomePage not found')

// SEO
const seoTitle = home.seo?.title
const seoDescription = home.seo?.description
const noindex = home.seo?.noindex

// HERO
const hero = home.hero ?? {}
const heroBadge = hero.badge
const heroTitle1 = hero.titleLine1
const heroTitle2 = hero.titleLine2
const heroTitle3 = hero.titleLine3

// תמונת הירו: אם יש תמונה בסאניטי משתמשים בה, אחרת נשארים עם התמונה הקבועה
const heroImg =
  hero.image ? urlFor(hero.image).width(1400).quality(85).url() : '/assets/yossi-hero.jpg'

const primaryCtaHref = hero.primaryCtaHref
const primaryCtaLabel = hero.primaryCtaText || 'בוא נדבר תכל׳ס ←'

const secondaryCtaHref = hero.secondaryCtaHref || '/about'
const secondaryCtaLabel = hero.secondaryCtaText || 'נעים להכיר, יוסי'

// H1 (צהוב, יחיד בדף)
const H1 =
  home.h1 ||
  'תהליך אימון וליווי רגשי עמוק לשחרור דפוסים ואמונות מגבילות מהשורש'

// פסקת גשר – Rich קודם, ואם אין אז טקסט
const bridgeRich = home.introParagraphRich
const bridgeText =
  home.introParagraph ||
  'תהליך עומק לשחרור חסמים, מציאת זוגיות ופריצת דרך בקריירה ועסקים.'

// Cards
const cards = home.cards?.items ?? []
const cardsSectionTitle = home.cards?.title || 'תחומי האימון'
const cardsSectionDescription =
  home.cards?.description || 'שלושה עמודי תווך לתהליך עמוק, מדויק ומותאם.'

// MSA
const msaIntro = home.methodIntro
const msa = home.msa?.items ?? []

// FAQ
const faq = home.faq?.items ?? []

// Bottom CTA
const bottomCtaText = home.bottomCtaText
const bottomCtaHref = home.bottomCtaHref

// צבע כותרות לפי הלוגו
const brandDeep = '#295157'
---

<BaseLayout title={seoTitle} description={seoDescription} noindex={noindex}>
  <!-- HERO -->
  <section class="relative overflow-hidden">
    <div class="container mx-auto px-6 py-16 md:py-24">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <!-- טקסט -->
        <div class="text-center lg:text-right order-1">
          {heroBadge && (
            <span class="inline-flex items-center gap-2 rounded-full border border-accent/30 bg-white/60 px-4 py-2 text-sm font-body font-bold text-accent">
              <span class="inline-block h-2 w-2 rounded-full bg-accent"></span>
              {heroBadge}
            </span>
          )}

          <!-- הכותרת העיצובית (לא H1) -->
          <div
            class="mt-7 leading-[1] text-6xl md:text-7xl lg:text-8xl font-black font-display tracking-tight"
            style={`color:${brandDeep}`}
          >
            <div>{heroTitle1}</div>
            <div>{heroTitle2}</div>
            <div>{heroTitle3}</div>
          </div>

          <!-- H1 יחיד, צהוב, ואין שורה מעליו -->
          <h1 class="mt-7 text-2xl md:text-3xl lg:text-4xl font-black font-display text-accent">
            {H1}
          </h1>

          <div class="mt-6 max-w-xl mx-auto lg:mr-0 lg:ml-auto text-foreground/70 font-body leading-relaxed">
            {bridgeRich ? (
              <div class="portabletext">
                <PortableText value={bridgeRich} />
              </div>
            ) : (
              <p>{bridgeText}</p>
            )}
          </div>

          <!-- כפתורים בדסקטופ -->
          <div class="mt-10 hidden lg:flex gap-6 justify-center">
            {primaryCtaHref && (
              <a
                href={primaryCtaHref}
                class="h-14 min-w-[240px] inline-flex items-center justify-center rounded-2xl bg-accent px-10 font-body font-bold text-white shadow hover:opacity-90 transition"
              >
                {primaryCtaLabel}
              </a>
            )}
            <a
              href={secondaryCtaHref}
              class="h-14 min-w-[240px] inline-flex items-center justify-center rounded-2xl border border-foreground/10 bg-white/70 px-10 font-body font-bold"
              style={`color:${brandDeep}`}
            >
              {secondaryCtaLabel}
            </a>
          </div>
        </div>

        <!-- תמונה -->
        <div class="order-2">
          <div class="rounded-[36px] border border-accent/20 bg-white/40 p-3">
            <div class="rounded-[28px] overflow-hidden bg-white">
              <img
                src={heroImg}
                alt="יוסי מדלסי"
                class="w-full h-auto object-cover max-h-[520px] md:max-h-none"
              />
            </div>
          </div>

          <!-- כפתורים במובייל -->
          <div class="mt-6 flex flex-col gap-4 lg:hidden">
            {primaryCtaHref && (
              <a
                href={primaryCtaHref}
                class="h-14 inline-flex items-center justify-center rounded-2xl bg-accent px-8 font-body font-bold text-white shadow hover:opacity-90 transition"
              >
                {primaryCtaLabel}
              </a>
            )}
            <a
              href={secondaryCtaHref}
              class="h-14 inline-flex items-center justify-center rounded-2xl border border-foreground/10 bg-white/70 px-8 font-body font-bold"
              style={`color:${brandDeep}`}
            >
              {secondaryCtaLabel}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- תחומי האימון -->
  <section class="container mx-auto px-6 pt-20 pb-14 text-center">
    <h2 class="text-4xl md:text-5xl font-black font-display" style={`color:${brandDeep}`}>
      {cardsSectionTitle}
    </h2>
    <p class="mt-4 text-base md:text-lg text-muted-foreground font-body">
      {cardsSectionDescription}
    </p>
  </section>

  <!-- CARDS -->
  <section class="container mx-auto px-6 pb-14">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {cards.map((item) => (
        <a
          href={item.link}
          class="group rounded-[36px] bg-white shadow-lg border border-foreground/5 p-10 text-center hover:shadow-xl transition"
        >
          <div class="mx-auto h-20 w-20 rounded-3xl bg-accent flex items-center justify-center text-white text-2xl">
            ✦
          </div>

          <h3 class="mt-8 text-2xl font-black font-display" style={`color:${brandDeep}`}>
            {item.title}
          </h3>
          <p class="mt-4 text-muted-foreground leading-relaxed font-body">{item.text}</p>

          <div class="mt-8 font-body font-bold text-accent inline-flex items-center gap-2">
            <span>לקריאה מלאה</span>
            <span class="transition group-hover:translate-x-[-2px]">←</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- MSA -->
  <section class="relative text-white">
    <div class="absolute inset-0 bg-[radial-gradient(900px_500px_at_50%_-150px,rgba(255,255,255,0.20),rgba(255,255,255,0)_55%),linear-gradient(180deg,#2b4f4a_0%,#0f2f33_55%,#0b2629_100%)]"></div>
    <div class="relative container mx-auto px-6 py-16 md:py-20">
      <div class="text-center lg:hidden">
        <div class="font-display font-black leading-[0.95] text-6xl">
          <div class="text-white">מודל</div>
          <div class="mt-2"><span class="text-accent">מ.ס.ע</span></div>
        </div>

        {msaIntro && (
          <p class="mt-6 max-w-2xl mx-auto text-white/75 font-body leading-relaxed">
            {msaIntro}
          </p>
        )}
      </div>

      <div class="mt-10 lg:mt-0 grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div class="order-2 lg:order-2 space-y-6">
          {msa.map((step) => (
            <div class="rounded-[28px] bg-white/10 border border-white/10 p-8 backdrop-blur-md shadow-[0_20px_60px_-40px_rgba(0,0,0,0.7)]">
              <div class="flex items-start gap-4">
                <div class="h-14 w-14 rounded-2xl bg-accent flex items-center justify-center text-2xl font-black font-display text-white">
                  {step.letter}
                </div>

                <div class="flex-1 text-right">
                  <h3 class="text-xl md:text-2xl font-black font-display">
                    {step.title}
                    {step.subtitle && (
                      <span class="text-white/70 font-body text-base md:text-lg"> | {step.subtitle}</span>
                    )}
                  </h3>
                  <p class="mt-3 text-white/75 font-body leading-relaxed">{step.text}</p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="hidden lg:flex order-1 lg:order-1 flex-col items-center text-center">
          <div class="font-display font-black leading-[0.95] text-7xl">
            <div class="text-white">מודל</div>
            <div class="mt-2"><span class="text-accent">מ.ס.ע</span></div>
          </div>

          {msaIntro && (
            <p class="mt-7 text-white/75 font-body leading-relaxed max-w-xl mx-auto">
              {msaIntro}
            </p>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="container mx-auto px-6 py-20">
    <h2 class="text-3xl md:text-4xl text-center font-black font-display" style={`color:${brandDeep}`}>
      שאלות נפוצות
    </h2>

    <div class="mt-10 max-w-4xl mx-auto space-y-6">
      {faq.map((it) => (
        <details class="group rounded-3xl bg-white border border-foreground/5 p-6">
          <summary class="cursor-pointer list-none flex items-start justify-between gap-4">
            <h3 class="m-0 text-xl font-black font-display">{it.question}</h3>
            <span class="text-accent select-none text-2xl leading-none font-black transition-transform duration-200 group-open:rotate-45">
              +
            </span>
          </summary>

          <div class="mt-4 text-muted-foreground font-body leading-relaxed">
            {it.answer}
          </div>
        </details>
      ))}
    </div>
  </section>

  {bottomCtaText && bottomCtaHref && (
    <section class="container mx-auto px-6 pb-24 text-center">
      <a
        href={bottomCtaHref}
        class="h-14 inline-flex items-center justify-center rounded-2xl bg-accent px-10 font-body font-bold text-white shadow hover:opacity-90 transition"
      >
        {bottomCtaText}
      </a>
    </section>
  )}
</BaseLayout>

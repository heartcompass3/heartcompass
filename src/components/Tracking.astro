---
import { sanity } from '../lib/sanity'
import { SITE_SETTINGS_QUERY } from '../lib/sanityQueries'

const settings = await sanity.fetch(SITE_SETTINGS_QUERY)
const tracking = settings?.tracking ?? {}

const enabled = !!tracking.enabled
const gaId = tracking.gaMeasurementId?.trim() ?? ''
const metaPixelId = tracking.metaPixelId?.trim() ?? ''
const tiktokPixelId = tracking.tiktokPixelId?.trim() ?? ''

const consentKey = 'hc_cookie_consent'
---

<script is:inline>
  (function () {
    const enabled = {enabled ? 'true' : 'false'};
    if (!enabled) return;

    const gaId = "{gaId}";
    const metaPixelId = "{metaPixelId}";
    const tiktokPixelId = "{tiktokPixelId}";
    const consentKey = "{consentKey}";

    function hasConsent() {
      return localStorage.getItem(consentKey) === "accepted";
    }

    function injectScript(src) {
      const s = document.createElement("script");
      s.async = true;
      s.src = src;
      document.head.appendChild(s);
      return s;
    }

    function loadGA() {
      if (!gaId) return;
      if (window.__hc_ga_loaded) return;
      window.__hc_ga_loaded = true;

      injectScript("https://www.googletagmanager.com/gtag/js?id=" + encodeURIComponent(gaId));
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      window.gtag = gtag;
      gtag("js", new Date());
      gtag("config", gaId);
    }

    function loadMetaPixel() {
      if (!metaPixelId) return;
      if (window.__hc_meta_loaded) return;
      window.__hc_meta_loaded = true;

      !(function(f,b,e,v,n,t,s){
        if(f.fbq) return; n=f.fbq=function(){n.callMethod?
        n.callMethod.apply(n,arguments):n.queue.push(arguments)};
        if(!f._fbq) f._fbq=n; n.push=n; n.loaded=!0; n.version='2.0';
        n.queue=[]; t=b.createElement(e); t.async=!0;
        t.src=v; s=b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t,s)
      })(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');
      window.fbq('init', metaPixelId);
      window.fbq('track', 'PageView');
    }

    function loadTikTokPixel() {
      if (!tiktokPixelId) return;
      if (window.__hc_tt_loaded) return;
      window.__hc_tt_loaded = true;

      (function (w, d, t) {
        w.TiktokAnalyticsObject = t;
        var ttq = w[t] = w[t] || [];
        ttq.methods = ["page","track","identify","instances","debug","on","off","once","ready","alias","group","enableCookie","disableCookie"];
        ttq.setAndDefer = function(t, e) { t[e] = function() { t.push([e].concat(Array.prototype.slice.call(arguments, 0))) } };
        for (var i = 0; i < ttq.methods.length; i++) ttq.setAndDefer(ttq, ttq.methods[i]);
        ttq.load = function(e, n) {
          var i = "https://analytics.tiktok.com/i18n/pixel/events.js";
          ttq._i = ttq._i || {};
          ttq._i[e] = [];
          ttq._i[e]._u = i;
          ttq._t = ttq._t || {};
          ttq._t[e] = +new Date;
          ttq._o = ttq._o || {};
          ttq._o[e] = n || {};
          var o = d.createElement("script");
          o.type = "text/javascript";
          o.async = true;
          o.src = i + "?sdkid=" + e + "&lib=" + t;
          var a = d.getElementsByTagName("script")[0];
          a.parentNode.insertBefore(o, a);
        };
        ttq.load(tiktokPixelId);
        ttq.page();
      })(window, document, 'ttq');
    }

    function loadAllIfAllowed() {
      if (!hasConsent()) return;
      // אחרי הסכמה: נטען Analytics + פיקסלים לפי מה שהוגדר בסאניטי
      loadGA();
      loadMetaPixel();
      loadTikTokPixel();
    }

    // ניסיון טעינה ראשוני
    try { loadAllIfAllowed(); } catch (_) {}

    // אם המשתמש מאשר בבאנר בלי רענון
    window.addEventListener("hc:consent-changed", function () {
      try { loadAllIfAllowed(); } catch (_) {}
    });
  })();
</script>

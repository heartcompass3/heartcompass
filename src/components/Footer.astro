---
const year = new Date().getFullYear()

const socials = [
  { label: 'Instagram', href: 'https://www.instagram.com/heartcompass3/', icon: 'instagram' },
  { label: 'Facebook', href: 'https://www.facebook.com/share/1AGLnvhmiF/', icon: 'facebook' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/heartcompass-medalsi-2a643a397/', icon: 'linkedin' },
  { label: 'Blog', href: 'https://heartcompass3.blogspot.com/', icon: 'blog' },
  { label: 'WhatsApp', href: 'https://wa.me/972544580285', icon: 'whatsapp' },
]

const iconSvg = (name) => {
  switch (name) {
    case 'instagram':
      return `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="5"/><path d="M16 11.37a4 4 0 1 1-7.87 1.26 4 4 0 0 1 7.87-1.26Z"/><path d="M17.5 6.5h.01"/></svg>`
    case 'facebook':
      return `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M13.5 22v-8h2.7l.4-3H13.5V9.1c0-.9.3-1.6 1.7-1.6h1.6V4.7c-.8-.1-1.8-.2-3-.2-2.9 0-4.9 1.8-4.9 5v1.5H6.2v3h2.7v8h4.6Z"/></svg>`
    case 'linkedin':
      return `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M6.94 6.5A2.44 2.44 0 1 1 6.94 1.6a2.44 2.44 0 0 1 0 4.9ZM2.7 22h4.5V8.2H2.7V22ZM9.6 8.2H14v1.9h.1c.6-1.1 2-2.2 4.2-2.2 4.5 0 5.3 3 5.3 6.8V22h-4.5v-6.3c0-1.5 0-3.5-2.1-3.5-2.1 0-2.4 1.6-2.4 3.4V22H9.6V8.2Z"/></svg>`
    case 'blog':
      return `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19a2 2 0 0 0 2 2h12"/><path d="M6 17V3h10v18"/><path d="M9 7h4"/><path d="M9 11h4"/></svg>`
    case 'whatsapp':
      return `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M20 11.5a8 8 0 1 1-15.3 3.2L4 21l6.5-1.6A8 8 0 0 1 20 11.5Z"/><path d="M9.3 9.2c.2-.4.4-.4.6-.4h.5c.2 0 .4.1.5.4.2.5.7 1.8.8 1.9.1.2.1.3 0 .5l-.3.4c-.1.1-.2.2-.1.4.2.4.8 1.3 1.7 2 .9.7 1.7.9 2 .8.1 0 .2-.1.3-.2l.4-.5c.1-.2.3-.2.5-.1.2.1 1.5.7 1.8.8.3.1.5.2.5.3 0 .2 0 1.1-.4 1.5-.4.4-1.2.8-1.7.8-.5.1-1.1.1-2.5-.5-1.4-.6-2.6-1.8-3.4-2.7-.8-.9-1.5-2.1-1.7-2.8-.2-.6-.1-1.1 0-1.4Z"/></svg>`
    default:
      return ''
  }
}
---

<footer class="bg-[#0f2f33] text-white">
  <div class="max-w-7xl mx-auto px-6 py-14">
    <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-10">

      <div class="text-center md:text-right space-y-3">
        <div class="font-display text-2xl">מצפן הלב</div>
        <div class="text-white/70 font-body">אימון רגשי תודעתי</div>
        <a href="mailto:heartcompass3@gmail.com" class="text-white/70 hover:text-white font-body dir-ltr">
          heartcompass3@gmail.com
        </a>
      </div>

      <div class="flex justify-center gap-4">
        {socials.map((s) => (
          <a
            href={s.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={s.label}
            class="w-11 h-11 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition"
          >
            <span class="w-5 h-5 text-white" set:html={iconSvg(s.icon)}></span>
          </a>
        ))}
      </div>

      <nav class="flex flex-col items-center md:items-end gap-3 font-body text-white/80">
        <a href="/" class="hover:text-white">ראשי</a>
        <a href="/about" class="hover:text-white">מי אני</a>
        <a href="/method" class="hover:text-white">השיטה</a>
        <a href="/blog" class="hover:text-white">מאמרים</a>
      </nav>
    </div>

    <div class="mt-10 pt-6 border-t border-white/10 text-center text-white/60 text-sm font-body">
      © {year} מצפן הלב. כל הזכויות שמורות.
    </div>
  </div>
</footer>

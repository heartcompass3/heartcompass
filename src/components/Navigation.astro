---
const navItems = [
  { label: 'בית', href: '/' },
  { label: 'על השיטה', href: '/method' },
  { label: 'תהליכים', href: '/process' },
  { label: 'בלוג', href: '/blog' },
  { label: 'צור קשר', href: '/contact' },
];
---

<header class="site-header">
  <div class="nav-inner">

    <!-- לוגו -->
    <a href="/" class="logo-wrap" aria-label="מצפן הלב">
      <img
        src="/assets/LOGO.PNG"
        alt="מצפן הלב"
        class="logo logo--dark"
      />
      <img
        src="/assets/LOGO-WHITE.PNG"
        alt="מצפן הלב"
        class="logo logo--light"
      />
    </a>

    <!-- ניווט -->
    <nav class="nav">
      {navItems.map(item => (
        <a href={item.href} class="nav-link">
          {item.label}
        </a>
      ))}
    </nav>

  </div>
</header>

<style>
/* מבנה כללי */
.site-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #0b1f2a; /* כחול כהה */
}

/* מצב רקע בהיר (צהוב) */
.site-header.is-light {
  background: #f5c400;
}

.nav-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 14px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* לוגו */
.logo-wrap {
  display: flex;
  align-items: center;
  text-decoration: none;
}

.logo {
  height: 48px;
  width: auto;
  display: block;
}

/* ברירת מחדל: רקע כהה → לוגו בהיר */
.logo--dark {
  display: none;
}

.logo--light {
  display: block;
}

/* כשיש רקע בהיר */
.site-header.is-light .logo--dark {
  display: block;
}

.site-header.is-light .logo--light {
  display: none;
}

/* ניווט */
.nav {
  display: flex;
  gap: 24px;
}

.nav-link {
  color: #ffffff;
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
}

.site-header.is-light .nav-link {
  color: #0b1f2a;
}

.nav-link:hover {
  opacity: 0.8;
}
</style>

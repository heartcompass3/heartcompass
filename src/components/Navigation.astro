---
import site from '../content/pages/site.json'
import { sanity } from '../lib/sanity'

const currentPath = Astro.url.pathname

const settings = await sanity.fetch(
  `*[_type=="siteSettings"][0]{ nav[]{ label, href } }`
)

const nav = settings?.nav ?? []

const methodChildren = [
  { label: 'אימון זוגי', href: '/method/couples' },
  { label: 'קריירה ועסקים', href: '/method/career' },
  { label: 'התפתחות אישית', href: '/method/personal' },
]

const isActive = (href) => {
  if (!href) return false
  if (href === '/') return currentPath === '/'
  return currentPath === href || currentPath.startsWith(href + '/')
}

const isMethodActive = currentPath === '/method' || currentPath.startsWith('/method/')
---

<nav
  class="sticky top-0 z-[100] border-b border-accent/20 bg-[#fbf8f2] md:bg-background/70 md:backdrop-blur-md"
  data-nav
>
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex items-center justify-between h-20">

      <a href="/" class="flex items-center gap-4">
        <img src="/assets/logo.png" alt="לוגו" class="h-10 w-auto" />
        <div class="flex flex-col leading-tight">
          <span class="font-display text-xl">{site.brand}</span>
          <span class="font-body text-xs text-muted-foreground">{site.tagline}</span>
        </div>
      </a>

      <!-- Desktop -->
      <div class="hidden md:flex gap-8 items-center">
        {nav.map((item) => {
          const isMethod = item.href === '/method'
          if (!isMethod) {
            return (
              <a
                href={item.href}
                class={`font-body font-bold transition ${
                  isActive(item.href)
                    ? 'text-foreground'
                    : 'text-muted-foreground hover:text-accent'
                }`}
              >
                {item.label}
              </a>
            )
          }

          return (
            <div class="relative" data-method>
              <button
                type="button"
                class={`font-body font-bold transition inline-flex items-center gap-2 ${
                  isMethodActive ? 'text-foreground' : 'text-muted-foreground hover:text-accent'
                }`}
                data-method-trigger
                aria-haspopup="true"
                aria-expanded="false"
              >
                {item.label}
                <span aria-hidden="true">▾</span>
              </button>

              <div
                class="hidden absolute right-0 mt-3 w-56 rounded-2xl bg-white shadow-elegant border border-accent/10 overflow-hidden z-[120]"
                data-method-menu
              >
                {methodChildren.map((c) => (
                  <a
                    href={c.href}
                    class={`block px-5 py-3 font-body text-sm transition ${
                      isActive(c.href)
                        ? 'bg-accent/10 text-foreground'
                        : 'text-foreground/80 hover:bg-accent/10 hover:text-foreground'
                    }`}
                  >
                    {c.label}
                  </a>
                ))}
              </div>
            </div>
          )
        })}
      </div>

      <!-- Mobile -->
      <div class="md:hidden">
        <button
          type="button"
          class="text-2xl"
          aria-label="פתח תפריט"
          aria-expanded="false"
          data-menu-button
        >
          ☰
        </button>

        <!-- Fullscreen Menu (אטום) -->
        <div
          class="hidden fixed inset-0 z-[200] bg-[#fbf8f2] overscroll-contain overflow-y-auto"
          style="background-color:#fbf8f2;"
          data-mobile-menu
          aria-hidden="true"
        >
          <div class="p-6 flex flex-col gap-6">
            <button
              type="button"
              aria-label="סגור תפריט"
              class="self-end text-3xl"
              data-menu-close
            >
              ×
            </button>

            <div class="flex flex-col gap-2">
              {nav.map((item) => {
                const isMethod = item.href === '/method'
                if (!isMethod) {
                  return (
                    <a
                      href={item.href}
                      class={`font-body text-xl border-b pb-4 transition ${
                        isActive(item.href) ? 'text-foreground' : 'text-foreground/80 hover:text-accent'
                      }`}
                      data-menu-link
                    >
                      {item.label}
                    </a>
                  )
                }

                return (
                  <div class="border-b pb-4">
                    <a
                      href="/method"
                      class={`font-body text-xl transition ${
                        isMethodActive ? 'text-foreground' : 'text-foreground/80 hover:text-accent'
                      }`}
                      data-menu-link
                    >
                      {item.label}
                    </a>

                    <div class="mt-3 flex flex-col gap-2 pr-3">
                      {methodChildren.map((c) => (
                        <a
                          href={c.href}
                          class={`font-body text-base transition ${
                            isActive(c.href) ? 'text-foreground' : 'text-foreground/70 hover:text-accent'
                          }`}
                          data-menu-link
                        >
                          {c.label}
                        </a>
                      ))}
                    </div>
                  </div>
                )
              })}
            </div>

            <div class="pt-2 text-sm text-muted-foreground font-body">
              {site.tagline}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script is:inline>
    (() => {
      const root = document.querySelector('[data-nav]');
      if (!root) return;

      // -------- Mobile menu ----------
      const menu = root.querySelector('[data-mobile-menu]');
      const btn = root.querySelector('[data-menu-button]');
      const closeBtn = root.querySelector('[data-menu-close]');
      const links = root.querySelectorAll('[data-menu-link]');

      const setExpanded = (v) => btn && btn.setAttribute('aria-expanded', v ? 'true' : 'false');

      const openMobile = () => {
        if (!menu) return;
        menu.classList.remove('hidden');
        menu.setAttribute('aria-hidden', 'false');
        setExpanded(true);
        document.documentElement.style.overflow = 'hidden';
      };

      const closeMobile = () => {
        if (!menu) return;
        menu.classList.add('hidden');
        menu.setAttribute('aria-hidden', 'true');
        setExpanded(false);
        document.documentElement.style.overflow = '';
      };

      if (btn && menu) {
        btn.addEventListener('click', () => {
          menu.classList.contains('hidden') ? openMobile() : closeMobile();
        });
      }
      if (closeBtn) closeBtn.addEventListener('click', closeMobile);
      links.forEach((a) => a.addEventListener('click', closeMobile));

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeMobile();
      });
      document.addEventListener('astro:after-swap', closeMobile);
      window.addEventListener('resize', () => {
        if (window.matchMedia('(min-width: 768px)').matches) closeMobile();
      });

      // -------- Desktop Method dropdown (click only) ----------
      const methodWrap = root.querySelector('[data-method]');
      const methodTrigger = root.querySelector('[data-method-trigger]');
      const methodMenu = root.querySelector('[data-method-menu]');

      const closeMethod = () => {
        if (!methodMenu || !methodTrigger) return;
        methodMenu.classList.add('hidden');
        methodTrigger.setAttribute('aria-expanded', 'false');
      };

      const openMethod = () => {
        if (!methodMenu || !methodTrigger) return;
        methodMenu.classList.remove('hidden');
        methodTrigger.setAttribute('aria-expanded', 'true');
      };

      const toggleMethod = () => {
        if (!methodMenu) return;
        methodMenu.classList.contains('hidden') ? openMethod() : closeMethod();
      };

      if (methodWrap && methodTrigger && methodMenu) {
        methodTrigger.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          toggleMethod();
        });

        methodMenu.addEventListener('click', (e) => e.stopPropagation());

        document.addEventListener('click', () => closeMethod());
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') closeMethod();
        });
        document.addEventListener('astro:after-swap', closeMethod);
      }
    })();
  </script>
</nav>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppFloat from '../../components/WhatsAppFloat.astro';
import site from '../../content/pages/site.json';
const title = `אימון זוגי בשיטת מ.ס.ע | ${site.brand}`;
const description = 'איך נראה תהליך אימון זוגי שמפרק דפוס, מוריד רעש ומחזיר קרבה.';
---
<BaseLayout title={title} description={description}>
  <Navigation />
  <main class="animate-fade-in py-24 bg-background min-h-screen">
    <div class="max-w-4xl mx-auto px-6">
      <header class="mb-10 text-center">
        <h1 class="text-5xl md:text-6xl font-black text-primary font-display mb-6">אימון זוגי בשיטת מ.ס.ע</h1>
        <p class="text-xl text-primary/70 font-body">{description}</p>
      </header>

      <div class="bg-white p-10 md:p-16 rounded-[3rem] shadow-elegant border border-white">
        <h2 class="text-2xl font-black text-primary font-display mb-6">מה קורה בפועל</h2>
        <ol class="space-y-6">
          <li class="bg-background p-6 rounded-2xl border border-accent/10">
            <div class="font-black text-accent mb-2">מיפוי</div>
            <div class="text-primary/80 font-body">מגדירים יעד זוגי ברור, ואז ממפים את הדפוס שמדליק את הריב או הכיווץ.</div>
          </li>
          <li class="bg-background p-6 rounded-2xl border border-accent/10">
            <div class="font-black text-accent mb-2">סילוק</div>
            <div class="text-primary/80 font-body">מסלקים את החסם שמנהל את התגובה. פחות נאומים, יותר עבודה שמחזירה ויסות.</div>
          </li>
          <li class="bg-background p-6 rounded-2xl border border-accent/10">
            <div class="font-black text-accent mb-2">עצמאות</div>
            <div class="text-primary/80 font-body">תוכנית פעולה קצרה, כללים ברורים לבית, ותהליך שמייצר שינוי שנשאר.</div>
          </li>
        </ol>

        <div class="mt-10">
          <a href={site.primaryCtaHref} class="inline-flex items-center gap-3 px-8 py-4 rounded-2xl gradient-gold text-white font-bold shadow-gold">{site.primaryCtaLabel} <span aria-hidden="true">←</span></a>
        </div>
      </div>
    </div>
  </main>
  <Footer />
  <WhatsAppFloat />
</BaseLayout>

---
import site from '../content/pages/site.json'
import '../styles/global.css'

import SeoHead from '../components/SeoHead.astro'

import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import WhatsAppFloat from '../components/WhatsAppFloat.astro'
import Tracking from '../components/Tracking.astro'
import CookieBanner from '../components/CookieBanner.astro'

const {
  title,
  description,
  canonical,
  // 转转 专: 拽 注 注专 noindex (砖) 拽 noIndex (砖)
  noindex,
  noIndex,
  ogImage,
  pageType,
  schema,
} = Astro.props

const resolvedCanonical =
  (typeof canonical === 'string' && canonical.trim())
    ? canonical.trim()
    : new URL(Astro.url.pathname, site.siteUrl).toString()

const defaultDescription = site.heroDescription || ' 专砖 转注转 砖专专 住 爪转 注.'
const resolvedDescription =
  (typeof description === 'string' && description.trim()) ? description.trim() : defaultDescription

const resolvedNoIndex = (noIndex === true) || (noindex === true)

const defaultServiceSchema = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: site.brand,
  url: site.siteUrl,
  description: resolvedDescription,
  founder: { '@type': 'Person', name: site.fullName },
  areaServed: 'IL',
}

const schemaArray = Array.isArray(schema) ? schema : []
const mergedSchema = [defaultServiceSchema, ...schemaArray]
---

<!doctype html>
<html lang="he" dir="rtl" class="bg-background text-foreground">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!--  Google Search Console verification -->
    <meta
      name="google-site-verification"
      content="JnPSkMeCL51vUpC5HuP0QtTUnyHdGn6qpMpo9ZwKCrw"
    />

    <SeoHead
      title={title}
      description={resolvedDescription}
      canonical={resolvedCanonical}
      noIndex={resolvedNoIndex}
      ogImage={ogImage}
      pageType={pageType}
      schema={mergedSchema}
    />

    <link rel="icon" href="/assets/logo.png" />

    <!-- Tracking Layer: 注 专拽 专 住 + enabled 住 -->
    <Tracking />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;500;600;700;800&family=Heebo:wght@300;400;500;600;700;800&display=swap"
    />
  </head>

  <body class="min-h-screen selection:bg-accent selection:text-white">
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
    <WhatsAppFloat />

    <!-- Cookie consent banner -->
    <CookieBanner />
  </body>
</html>

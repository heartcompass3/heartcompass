---
import site from '../content/pages/site.json'
import '../styles/global.css'

import SeoHead from '../components/SeoHead.astro'

import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import WhatsAppFloat from '../components/WhatsAppFloat.astro'
import Tracking from '../components/Tracking.astro'
import CookieBanner from '../components/CookieBanner.astro'

const {
  title,
  description,
  canonical,
  // 转转 专: 拽 注 注专 noindex (砖) 拽 noIndex (砖)
  noindex,
  noIndex,
  ogImage,
  pageType,
  schema,
} = Astro.props

const clean = (v?: string) => (typeof v === 'string' ? v.trim() : '')

const resolvedCanonicalRaw =
  clean(canonical) || new URL(Astro.url.pathname, site.siteUrl).toString()

// 专爪 注  转砖专 注 拽拽 砖 转专 (专 住砖)
//  注 砖专砖,  转转 注 住转 拽抓.
const normalizeCanonical = (url: string) => {
  const u = clean(url)
  if (!u) return u
  try {
    const parsed = new URL(u)
    const path = parsed.pathname || '/'
    const looksLikeFile = /\.[a-z0-9]+$/i.test(path)
    if (path === '/' || looksLikeFile) return parsed.toString()
    if (!path.endsWith('/')) parsed.pathname = `${path}/`
    return parsed.toString()
  } catch {
    return u
  }
}

const resolvedCanonical = normalizeCanonical(resolvedCanonicalRaw)

const defaultDescription =
  site.heroDescription || ' 专砖 转注转 砖专专 住 爪转 注.'
const resolvedDescription =
  clean(description) || defaultDescription

const resolvedNoIndex = (noIndex === true) || (noindex === true)

const schemaArray = Array.isArray(schema) ? schema : []

//  专 爪专 住:  驻 pageType  驻 path  驻 住转 Article
const hasArticleSchema = schemaArray.some((s) => s && (s['@type'] === 'Article' || s['@type'] === 'NewsArticle'))
const isArticlePage =
  pageType === 'article' ||
  Astro.url.pathname.startsWith('/articles/') ||
  hasArticleSchema

const defaultServiceSchema = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  '@id': `${resolvedCanonical}#service`,
  name: site.brand,
  url: resolvedCanonical,
  description: resolvedDescription,
  founder: { '@type': 'Person', name: site.fullName },
  areaServed: 'IL',
}

// 专:  住驻 ProfessionalService .
// 砖专 注: 住驻 转 专砖 专砖,   专 拽.
const alreadyHasService = schemaArray.some((s) => s && s['@type'] === 'ProfessionalService')

const mergedSchema = isArticlePage
  ? schemaArray
  : (alreadyHasService ? schemaArray : [defaultServiceSchema, ...schemaArray])
---

<!doctype html>
<html lang="he" dir="rtl" class="bg-background text-foreground">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!--  Google Search Console verification -->
    <meta
      name="google-site-verification"
      content="JnPSkMeCL51vUpC5HuP0QtTUnyHdGn6qpMpo9ZwKCrw"
    />

    <SeoHead
      title={title}
      description={resolvedDescription}
      canonical={resolvedCanonical}
      noIndex={resolvedNoIndex}
      ogImage={ogImage}
      pageType={pageType}
      schema={mergedSchema}
    />

    <link rel="icon" href="/assets/logo.png" />

    <!-- Tracking Layer: 注 专拽 专 住 + enabled 住 -->
    <Tracking />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@300;400;500;600;700;800&family=Heebo:wght@300;400;500;600;700;800&display=swap"
    />
  </head>

  <body class="min-h-screen selection:bg-accent selection:text-white">
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
    <WhatsAppFloat />

    <!-- Cookie consent banner -->
    <CookieBanner />
  </body>
</html>
